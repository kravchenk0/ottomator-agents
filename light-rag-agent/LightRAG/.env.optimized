# ========================================
# OPTIMIZED CONFIGURATION FOR FAST RESPONSE
# ========================================
# Copy this to .env to use optimized settings

# Core
OPENAI_API_KEY=your_api_key_here
RAG_API_KEYS=key1,key2,key3

# AI Models - Use faster models
OPENAI_MODEL=gpt-5-mini
RAG_LLM_MODEL=gpt-5-mini
OPENAI_FALLBACK_MODELS=gpt-4o-mini
RAG_EMBEDDING_MODEL=text-embedding-3-large

# AGGRESSIVE TIMEOUTS FOR FAST RESPONSE
OPENAI_TIMEOUT_SECONDS=20              # Reduced from 45
RAG_AGENT_TIMEOUT_SECONDS=30           # Reduced from 75
RAG_RETRIEVE_TIMEOUT_SECONDS=15        # Reduced from 45
RAG_RETRIEVE_TIMEOUT_FAST=5            # Very fast for simple queries
RAG_RETRIEVE_TIMEOUT_MEDIUM=10         # Fast for medium queries

# ENHANCED CACHING
RAG_CACHE_TTL_SECONDS=600               # Increased from 300
RAG_CHAT_CACHE_TTL_SECONDS=3600         # Increased from 1800
RAG_HISTORY_ASYNC_THRESHOLD=10          # Reduced from 20

# CONVERSATION MANAGEMENT
RAG_MAX_HISTORY_MESSAGES=8              # Reduced from 12 for faster processing
RAG_USER_RATE_LIMIT=20                  # Increased from 10
RAG_CONVERSATION_TTL_SECONDS=7200       # Increased from 3600

# PERFORMANCE FLAGS
RAG_DETAILED_METRICS=1
RAG_ENABLE_GLOBAL_CACHE=1
RAG_PARALLEL_PROCESSING=1
RAG_OPTIMIZE_QUERIES=1

# SERVER SETTINGS
WORKERS=4
LOG_LEVEL=WARNING                       # Reduce logging overhead