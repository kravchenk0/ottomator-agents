# TERRAFORM SECRETS CONFIGURATION EXAMPLE
# =======================================
# Copy this to secrets.tfvars and update with your values
# НЕ КОММИТИТЬ В GIT – добавить в .gitignore при необходимости

# NOTE: OpenAI secrets are now read from .env file automatically
# You only need to provide them here if you want to override the .env values
# or if .env file doesn't exist

# GitHub token (still required in Terraform)
github_token = "github_pat_11ACQHR4I0QjbMJDVH8ZhH_EXAMPLE_TOKEN"

# Optional overrides (will use .env values if not provided)
# openai_api_key = "sk-proj-EXAMPLE_KEY"  # Optional - read from .env
# rag_api_keys = "your-api-keys-here"     # Optional - read from .env  
# rag_jwt_secret = "your-jwt-secret"      # Optional - auto-generated

# Amazon Linux version
use_amazon_linux_2023 = false

# Domain configuration
domain_name      = "businessindunes.ai"
app_subdomain    = "api"
route53_zone_id  = "Z0312302360GXHE7T435J"

# ALB/HTTPS configuration
enable_alb         = true
alb_idle_timeout   = 120
certificate_domain = ""

# API Access (choose one approach)
enable_public_api   = true   # Allow direct public access to port 8000 (recommended for production API)
# debug_open_app_port = true # TEMP: Debug flag for troubleshooting (use only when needed)

# AWS configuration
aws_region = "me-south-1"
aws_profile = "kravchenk0"
availability_zone            = "me-south-1a"
secondary_availability_zone  = "me-south-1b"

# Infrastructure reuse
create_vpc                 = true
existing_vpc_id            = ""
existing_subnet_id         = ""
existing_security_group_id = ""

# S3 Document Storage
s3_document_prefix          = "documents/"
s3_document_retention_days  = 0
enable_s3_versioning        = true
s3_lifecycle_ia_days        = 30
s3_lifecycle_glacier_days   = 90

# Key pair management
create_key_pair   = true
existing_key_name = ""
create_eip        = false

# Security: Allowed ingress CIDRs
allowed_ingress_cidrs = [
	"95.165.165.209/32",
	"185.158.133.1/32",
	"185.77.216.0/24",
	"84.17.55.0/24"
]

# Resource tags
tags = {
  Environment = "production"
  Project     = "lightrag"
  ManagedBy   = "terraform"
  Component   = "s3-rag-api"
}