# ========================================
# LightRAG Agent Configuration
# ========================================

# Core Settings
# ----------------------------------------
OPENAI_API_KEY=your_openai_api_key_here
RAG_API_KEYS=key1,key2,key3  # Comma-separated API keys for access control

# AI Model Configuration (Updated 2024)
# ----------------------------------------
OPENAI_MODEL=gpt-5-mini                    # Primary model (latest, fastest)
RAG_LLM_MODEL=gpt-5-mini                   # RAG language model
OPENAI_FALLBACK_MODELS=gpt-4.1,gpt-4o-mini # Fallback chain
RAG_EMBEDDING_MODEL=text-embedding-3-large # Embedding model (highest quality)

# Performance Timeouts (seconds)
# ----------------------------------------
OPENAI_TIMEOUT_SECONDS=45
RAG_AGENT_TIMEOUT_SECONDS=75
RAG_RETRIEVE_TIMEOUT_SECONDS=45

# Caching Configuration
# ----------------------------------------
RAG_CACHE_TTL_SECONDS=300            # RAG result cache TTL
RAG_CHAT_CACHE_TTL_SECONDS=1800      # Chat cache TTL
RAG_HISTORY_ASYNC_THRESHOLD=20       # Threshold for async history building

# Rate Limiting & Conversation Management
# ----------------------------------------
RAG_MAX_HISTORY_MESSAGES=12          # Max messages in conversation history
RAG_USER_RATE_LIMIT=10               # Max requests per user per minute
RAG_CONVERSATION_TTL_SECONDS=3600    # Conversation cleanup TTL

# S3 Integration (Optional)
# ----------------------------------------
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=me-south-1
AWS_S3_BUCKET=lightrag-documents-production

# JWT Authentication
# ----------------------------------------
JWT_SECRET_KEY=your_secure_jwt_secret_key_here
JWT_ALGORITHM=HS256
JWT_EXP_DELTA_SECONDS=3600

# Server Configuration
# ----------------------------------------
HOST=0.0.0.0
PORT=8000
WORKERS=4
LOG_LEVEL=INFO

# Monitoring & Metrics
# ----------------------------------------
RAG_DETAILED_METRICS=1               # Enable detailed Prometheus metrics
PROMETHEUS_PORT=9090                 # Prometheus metrics port

# Development Mode
# ----------------------------------------
DEBUG=0                              # Set to 1 for debug mode
RELOAD=0                             # Set to 1 for auto-reload in development