# Production Environment Variables for LightRAG on AWS

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4.1-mini
OPENAI_TEMPERATURE=0.0

# RAG Configuration
RAG_WORKING_DIR=/app/documents
RAG_EMBEDDING_MODEL=gpt-4.1-mini
RAG_LLM_MODEL=gpt-4.1-mini
RAG_RERANK_ENABLED=true
RAG_BATCH_SIZE=20
RAG_MAX_DOCS_FOR_RERANK=20
RAG_CHUNK_SIZE=1000
RAG_CHUNK_OVERLAP=200

# App Configuration
APP_DEBUG=false
APP_LOG_LEVEL=INFO
APP_MAX_CONVERSATION_HISTORY=100
APP_ENABLE_STREAMING=true

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_CORS_ORIGINS=https://your-domain.com,https://www.your-domain.com
API_ENABLE_DOCS=false
API_RATE_LIMIT=100
API_MAX_REQUEST_SIZE=10MB

# AWS Configuration
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_aws_access_key_id
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key

# Security
API_SECRET_KEY=your_secret_api_key_here
CORS_ALLOWED_ORIGINS=https://your-domain.com,https://www.your-domain.com

# Redis Configuration (if using Redis)
REDIS_URL=redis://redis:6379
REDIS_PASSWORD=

# Nginx Configuration
NGINX_SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
NGINX_SSL_KEY_PATH=/etc/nginx/ssl/key.pem 